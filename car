package UI;

import java.awt.Component;

public class Car {

	private String brand;
	private String carname;
	private String model;
	private int year;
	private String automaticgearbox;
	private String fueltype;
	private int price;
	private int horsepower;
	private int emissions;
	private int topspeed;
	private String location;
	private String image;
	
	public Car(){
		
	}
	
 public Car(String brand, String carname, String model, int year, String automaticgearbox, String fueltype,
		 int price, int horsepower, int emissions, int topspeed, String location, String image){
	
	this.brand = brand;
	this.carname = carname;
	this.model = model;
	this.year = year;
	this.automaticgearbox = automaticgearbox;
	this.fueltype = fueltype;
	this.price = price;
	this.horsepower = horsepower;
	this.emissions = emissions;
	this.topspeed = topspeed;
	this.location = location;
	this.image = image;
}
	public String getBrand(){
		return this.brand;
	}
	public String getCarname(){
		return this.carname;
	}
    public String getModel(){
    	return this.model;
    }
	public String getgearbox(){
		return this.automaticgearbox;
	}
	public String getFueltype(){
		return this.fueltype;
	}
    public int getPrice(){
    	return this.price;
    }
    public int getHorsepower(){
    	return this.horsepower;
    }
	public int getEmissions(){
		return this.emissions;
	}
    public int getTopspeed(){
    	return this.topspeed;
    }
	public String getLocation(){
		return this.location;
	}
	public String getImage(){
		return this.image;
	}

	public void setBrand(String brand){
		this.brand = brand;
		}
		public void setCarname(String carname){
		this.carname = carname;
		}
		public void setModel(String model){
		this.model = model;
		}
		public void setAutomaticgearbox(String automaticgearbox){
		this.automaticgearbox = automaticgearbox;
		}
		public void setFueltype(String fueltype){
		this.fueltype = fueltype;
		}
		public void setPrice(int price){
		this.price = price;
		}
		public void setHorsepower(int horsepower){
		this.horsepower = horsepower;
		}
		public void setEmissions(int emissions){
		this.emissions = emissions;
		}
		public void setTopspeed(int topspeed){
		this.topspeed = topspeed;
		}
		public void setLocation(String location){
		this.location = location;
		}
	//public String miniString(){
		//return "Car " + this.brand  + " " + this.carname +" "+ "Location " +  this.location +  " Price " + this.price + " SEK";
				
	//}
		
		
	public String toString()
	{
		return  "Model: " + this.model + "\n" +
	   "Brand: " + this.brand + "\n" + "Location: " + 
	this.location + "\n" + "Price: " + this.price + " SEK \n" +
	"Gearbox: " + this.automaticgearbox + "\n" + "Year: " + this.year + "\n"
	+ "Hourse power: " + this.horsepower + " bhp \n" + "Top speed: " + this.topspeed
	+ " km/h \n" + "Emissions: " + this.emissions + " (co2) g/km \n" + "Fuel type: " + this.fueltype
	+ "\n";
		
	}
}
	

